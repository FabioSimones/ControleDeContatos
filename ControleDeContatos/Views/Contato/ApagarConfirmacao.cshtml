@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar contato";
}

<div class="text-center">    
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-danger btn-block" role="button" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id">Confirmar Exclusão</a>
<a class="btn btn-warning btn-block" asp-action="Index" asp-controller="Contato" role="button">Cancelar Exclusão</a>