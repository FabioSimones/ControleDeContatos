@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar o usuário";
}

<div class="text-center">    
    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<a class="btn btn-danger btn-block" role="button" asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id">Confirmar Exclusão</a>
<a class="btn btn-warning btn-block" asp-action="Index" asp-controller="Usuario" role="button">Cancelar Exclusão</a>